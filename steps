#include <iostream>
using namespace std;

int main()
{

int b, i, c, a;
cout << "enter your piramide's height: ";
cin >> i;

while ((i < 0) || (i > 23))
    {
        cout << "enter your piramide's height again:";
        cin >> i;
    }

cout << "your piramide's height: " << i << "\n";

for (b=1; b<=i; b=b+1)
    {
        for (c=i-b; c>=1; c=c-1)
        {
            cout << " ";
        }
        for (a=b-1; a>=1; a=a-1)
        {
            cout << "#";
        }
        cout << "##\n";
    }

return 0;

}
